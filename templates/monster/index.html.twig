{% extends 'base.html.twig' %}

{% block title %}Monster index{% endblock %}

{% block body %}
    <h1>Monster index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Level</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for monster in monsters %}
            <tr>
                <td>{{ monster.id }}</td>
                <td>{{ monster.Name }}</td>
                <td>{{ monster.Image }}</td>
                <td>{{ monster.Level }}</td>
                <td>
                    <a href="{{ path('monster_show', {'id': monster.id}) }}">show</a>
                    <a href="{{ path('monster_edit', {'id': monster.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('monster_new') }}">Create new</a>
{% endblock %}
