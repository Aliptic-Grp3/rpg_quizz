{% extends 'base.html.twig' %}

{% block title %}Hello AcceuilController!{% endblock %}

{% block body %}
<div class="container">
	{% if app.user %}
		<div class="mb-3">
			Bonjour {{ app.user.username }}<br><a href="{{ path('app_logout') }}" class="btn btn-danger">Logout</a>
		</div>
		{% else  %}
			<div class="mb-3">
				<a href="{{ path('app_login') }}" class="btn btn-primary">Login</a>
			</div>
	{% endif %}
	<div class="row">
		<div class="col-2">

			{% if app.user %}
				<br>
				<a href="{{ path('persona_index') }}">Personnage</a>
			{% endif %}
		</div>
	</div>
</div>
{% endblock %}
